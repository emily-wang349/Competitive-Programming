#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n, k;
    cin >>n >> k;

    if (n%k==0)
    {
        cout << 0;
    }
    else
    {
        int m = n%k;

        int a = k-m;

        if (m>=n)
        {
            cout << a;
        }
        else if (a >= m)
        {
            cout << m;
        }
        else if ( m  > a)
        {
            cout << a;
        }
    }
}
