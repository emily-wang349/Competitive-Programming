import java.util.*;
public class chocolate {
	static Scanner input = new Scanner (System.in);
	public static void main(String[] args) {
		int n = input.nextInt();
		int a, b, c, d=0;
		while (true){
			a = input.nextInt();
			b = input.nextInt();
			c = Math.abs(b-1);
			c += (a-1)*b;
			System.out.println(c);
			d++;
			if (d==n)
				break;
		}

	}

}
